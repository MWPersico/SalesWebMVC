@model SalesWebMVC.Models.ViewModels.SalesRecordFormViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SalesRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalesRecord.Date" class="control-label"></label>
                <input asp-for="SalesRecord.Date" class="form-control" type="date" />
                <span asp-validation-for="SalesRecord.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Amount" class="control-label"></label>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="SalesRecord.Amount" class="form-control" type="number" />
                        <span asp-validation-for="SalesRecord.Amount" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.Status" class="control-label"></label>
                <select asp-for="SalesRecord.Status" class="form-control" asp-items="Html.GetEnumSelectList<SalesWebMVC.Models.Enums.SaleStatus>()">
                    <option selected disabled>Select Status</option>
                </select>
                <span asp-validation-for="SalesRecord.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalesRecord.SellerId" class="control-label"></label>
                <select asp-for="SalesRecord.SellerId" asp-items="@(new SelectList(Model.Sellers, "Id", "Name"))" class="form-control" ></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
